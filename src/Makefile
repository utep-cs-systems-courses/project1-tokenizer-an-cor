# for convenience, define variable $(OBJS) to list of object filese
OBJS= tokenizer.o uimain.o history.o

# compiler flags.  -g for debug, -O3 for optimization
CFLAGS=-g -O3

# first target is built by default
all: tokenizer

tokenizer: $(OBJS)
	cc -o tokenizer $(CFLAGS) $(OBJS)

# all object files built from c built by tokenizer.h and history.h
$(OBJS): tokenizer.h history.h

# deletes files generated by compilation
clean:
	rm -f *.o tokenizer

run: tokenizer
	./tokenizer
